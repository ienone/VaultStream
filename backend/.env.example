# ====================================================================
# VaultStream 配置文件
# ====================================================================

# ====================================================================
# 数据库配置
# ====================================================================
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=./data/vaultstream.db

# ====================================================================
# 任务队列配置
# ====================================================================
QUEUE_TYPE=sqlite

# ====================================================================
# 存储配置
# ====================================================================
STORAGE_BACKEND=local
STORAGE_LOCAL_ROOT=./data/media
STORAGE_PUBLIC_BASE_URL=http://localhost:8000/api/v1/media

# ====================================================================
# 媒体处理配置
# ====================================================================
# 启用图片下载和WebP转码
ENABLE_ARCHIVE_MEDIA_PROCESSING=True
ARCHIVE_IMAGE_WEBP_QUALITY=80
ARCHIVE_IMAGE_MAX_COUNT=100

# ====================================================================
# API 服务配置
# ====================================================================
APP_ENV=dev
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# API 鉴权（可选：不设置则不校验；设置后需在请求中携带 X-API-Token 或 Bearer）
API_TOKEN=

# ====================================================================
# 日志配置
# ====================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# ====================================================================
# 智能爬虫与AI配置 (Native Crawler & AI)
# ====================================================================

# --- 1. 视觉模型配置 (Vision LLM) ---
# 用于: 主动发现 (Browser Use), 复杂网页视觉分析
# 推荐: Qwen-VL-Max (阿里), GPT-4o (OpenAI)
VISION_LLM_PROVIDER=openai  # 通常保持 openai 即可，通过 base_url 适配
VISION_LLM_API_KEY=sk-xxx
VISION_LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
VISION_LLM_MODEL=qwen-vl-max

# --- 2. 文本模型配置 (Text LLM) ---
# 用于: 网页内容清洗, 摘要生成, 结构化提取 (Crawl4AI)
# 推荐: DeepSeek-V3, Qwen-Turbo, GPT-4o-mini (成本极低)
TEXT_LLM_PROVIDER=openai
TEXT_LLM_API_KEY=sk-xxx
TEXT_LLM_BASE_URL=https://api.deepseek.com
TEXT_LLM_MODEL=deepseek-chat

# --- 3. 浏览器配置 (Browser) ---
# 用于: 突破登录墙, 复用本地 Cookie
# Windows 示例: C:\Program Files\Google\Chrome\Application\chrome.exe
# Linux 示例: /usr/bin/google-chrome
CHROME_PATH=
# 用户数据目录 (Default Profile)
# Windows 示例: C:\Users\YourUser\AppData\Local\Google\Chrome\User Data
CHROME_USER_DATA_DIR=
# 是否禁用浏览器扩展 (防止 browser-use 启动超时)
BROWSER_USE_DISABLE_EXTENSIONS=true

# ====================================================================
# Telegram Bot 配置(可选)
# ====================================================================
ENABLE_BOT=False
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_id
# Bot 权限控制
# 管理员用户ID列表，逗号分隔
TELEGRAM_ADMIN_IDS=123456,789012  
# 白名单用户ID（为空则允许所有用户）
TELEGRAM_WHITELIST_IDS=      
# 黑名单用户ID     
TELEGRAM_BLACKLIST_IDS=           

# ====================================================================
# Napcat/QQ Bot 配置（可选）
# ====================================================================
ENABLE_NAPCAT=False
# Napcat OneBot 11 HTTP API 地址
NAPCAT_API_BASE=http://127.0.0.1:3000
# Napcat 访问令牌（与 Napcat 配置一致）
NAPCAT_ACCESS_TOKEN=
# Bot 的 QQ 号（用于合并转发显示）
NAPCAT_BOT_UIN=

# ====================================================================
# 代理配置（可选）
# ====================================================================
# 用于访问被墙平台（Telegram、Twitter等）
# HTTP_PROXY=http://127.0.0.1:7890
# HTTPS_PROXY=http://127.0.0.1:7890

# ====================================================================
# 平台特定配置（可选）
# ====================================================================

# B站配置（需要登录才能访问的内容,暂无）
# BILIBILI_SESSDATA=
# BILIBILI_BILI_JCT=
# BILIBILI_BUVID3=

# Twitter/X 配置
# 使用 FxTwitter API，无需配置